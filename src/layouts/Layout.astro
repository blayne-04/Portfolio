---
import '../styles/tailwind.css';
import alpineScript from '../scripts/alpine.js?url';
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/icon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>BlayneF Portfolio </title>
	</head>
	<body>
		<div class="page-shell">
			<slot />
		</div>
		<script type="module" src={alpineScript}></script>
	</body>
</html>

	<style>
		:root {
			--navbar-height: 70px;
			--footer-height: 10px;
			--color-page-bg: #b2d8d8;
			--color-text-base: #111827;
			--color-text-muted: #4b5563;
			--color-text-inverse: #ffffff;
			--color-text-inverse-soft: #e6e6e6;
			--color-surface: #18181b;
			--color-surface-alt: #111827;
			--color-surface-card: #ffffff;
			--color-surface-card-hover: rgba(255, 255, 255, 0.55);
			--color-border-soft: rgba(255, 255, 255, 0.12);
			--color-border-strong: rgba(0, 0, 0, 0.24);
			--color-border-contrast: rgba(17, 24, 39, 0.12);
			--color-accent: #e7ffff;
			--color-accent-strong: #48fcfc;
			--color-accent-muted: rgb(78, 80, 86);
			--gradient-button: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
			--gradient-code-text: linear-gradient(14deg, #d83333 0%, #f041ff 100%);
			--gradient-code-bg: linear-gradient(66.77deg, #f3cddd 0%, #f5cee7 100%);
			--gradient-code-border: linear-gradient(155deg, #d83333 0%, #f041ff 18%, #f5cee7 45%);
		}

		html,
		body {
			margin: 0;
			width: 100%;
			min-height: 100%;
			background-color: var(--color-page-bg);
			color: var(--color-text-base);
		}

	</style>
