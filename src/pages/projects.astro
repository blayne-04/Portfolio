---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import Background from '../components/Background.astro';
import Projects from '../components/Projects.astro';
import './_index.css';
---

<Layout>
  <div class="page-with-background">
    <Background class="page-with-background__layer" />
    <Navbar />
    <main class="page-content">
      <Projects />
    </main>
    <Footer />
  </div>
</Layout>

<style>
  .projects-page-content {
    min-height: calc(100vh - 140px); /* Account for navbar and footer */
    display: flex;
    align-items: stretch;
    justify-content: center;
    position: relative;
    z-index: 10;
    padding: 0;
  }

  /* Ensure projects component fills the content area */
  .projects-page-content :global(.projects) {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }


</style>