<style>
  .home-scale {
    display: flex;
    justify-content: center;
    transform: scale(0.9);
    transform-origin: top center;
    padding-top: 0.5rem;
  }

  .home {
    display: grid;
    grid-template-columns: minmax(0, 1.6fr) minmax(0, 1fr);
    gap: 2rem;
    padding: 4rem 2rem 5rem;
    width: 85%;
    max-width: 1400px;
    margin: 0 auto;
  }

  .overview {
    display: flex;
    flex-direction: column;
    gap: 1.75rem;
  }

  .hero-image {
    display: block;
    border-radius: 16px;
    overflow: hidden;
    min-height: clamp(200px, 35vw, 280px);
    border: 1px solid rgba(255, 255, 255, 0.18);
    backdrop-filter: blur(2px);
    box-shadow: 0 25px 45px rgba(15, 23, 42, 0.35);
  }

  .hero-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .summary-card {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    padding: 1.9rem;
    border-radius: 20px;
    border: 1px solid rgba(255, 255, 255, 0.15);
    background: rgba(15, 23, 42, 0.2);
    backdrop-filter: blur(14px);
    color: var(--color-text-inverse);
    box-shadow: 0 25px 55px rgba(15, 23, 42, 0.38);
  }

  .summary-header {
    border-bottom: 1px solid rgba(255, 255, 255, 0.12);
    padding-bottom: 1rem;
    display: grid;
    gap: 0.5rem;
  }

  .summary-overline {
    margin: 0;
    font-size: 0.85rem;
    font-weight: 600;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--color-text-inverse-soft);
  }

  .summary-title {
    margin: 0;
    font-size: 1.6rem;
    font-weight: 600;
    letter-spacing: 0.03em;
  }

  .summary-text {
    margin: 0;
    color: var(--color-text-inverse-soft);
    line-height: 1.6;
  }

  .summary-section {
    display: grid;
    gap: 0.35rem;
  }

  .summary-label {
    margin: 0;
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-text-inverse);
    letter-spacing: 0.02em;
  }

  .resume-link {
    align-self: flex-start;
    display: inline-flex;
    align-items: center;
    padding: 0.6rem 1.5rem;
    border-radius: 999px;
    background: transparent;
    border: 1px solid rgba(125, 245, 245, 0.6);
    color: var(--color-text-inverse);
    font-weight: 600;
    text-decoration: none;
    letter-spacing: 0.02em;
    transition: transform 180ms ease, box-shadow 180ms ease, border-color 180ms ease;
  }

  .resume-link:hover,
  .resume-link:focus-visible {
    transform: translateY(-2px);
    border-color: var(--color-accent);
    box-shadow: 0 12px 30px rgba(72, 252, 252, 0.28);
  }

  .context-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 1.5rem;
  }

  .context-card {
    padding: 1.6rem;
    border-radius: 18px;
    border: 1px solid rgba(255, 255, 255, 0.16);
    background: rgba(15, 23, 42, 0.18);
    backdrop-filter: blur(12px);
    color: var(--color-text-inverse);
    box-shadow: 0 18px 44px rgba(15, 23, 42, 0.32);
  }

  .context-title {
    margin: 0 0 0.75rem 0;
    font-size: 1.1rem;
    font-weight: 600;
    letter-spacing: 0.02em;
  }

  .context-text {
    margin: 0;
    color: var(--color-text-inverse-soft);
    line-height: 1.6;
  }

  .context-list {
    margin: 0;
    padding-left: 1.1rem;
    display: grid;
    gap: 0.5rem;
    color: var(--color-text-inverse-soft);
  }

  .context-label {
    font-weight: 600;
    color: var(--color-text-inverse);
  }

  .sidebar {
    display: flex;
    flex-direction: column;
    gap: 1.75rem;
  }

  .card {
    border-radius: 20px;
    padding: 1.6rem;
    border: 1px solid rgba(255, 255, 255, 0.14);
    background: rgba(15, 23, 42, 0.22);
    backdrop-filter: blur(16px);
    color: var(--color-text-inverse);
    box-shadow: 0 20px 50px rgba(15, 23, 42, 0.32);
  }

  .card-title {
    margin: 0 0 1.25rem 0;
