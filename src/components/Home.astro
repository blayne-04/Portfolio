---
import portraitImage from '../../public/portfolio_photo.png';
import resumePdf from '../assets/Resume.pdf?url';
import '../styles/Home.css';
import { toolItems, certificationItems } from '../data/home';
import SummaryCard from './home/SummaryCard.astro';
import ContextSection from './home/ContextSection.astro';
import ToolsCard from './home/ToolsCard.astro';
import CertificationsCard from './home/CertificationsCard.astro';
import Roadmap from './home/Roadmap.astro';

import certModalScript from '../scripts/certModal.js?url';
---
<div class="home-scale">
  <section class="home">
    <div class="overview">
      <figure class="hero-image">
        <img src={portraitImage.src} alt="Blayne F. Portrait" loading="lazy" />
      </figure>

      <SummaryCard resumeHref={resumePdf} />

      <ContextSection />
 
    </div>

    <aside class="sidebar">
      <ToolsCard items={toolItems} />
      <CertificationsCard items={certificationItems} />
      <Roadmap />
    </aside>
  </section>
</div>

<script type="module" src={certModalScript}></script>
