          <span>Tools</span>
        </h2>
        <div class="icon-grid icon-grid--six" role="list">
          {toolItems.map((item) => (
            <div class="icon" role="listitem" aria-label={item.name} title={item.name}>
              <span class="sr-only">{item.name}</span>
              <span class="icon-graphic" set:html={item.icon}></span>
            </div>
          ))}
        </div>
      </section>

      <section class="card certifications">
