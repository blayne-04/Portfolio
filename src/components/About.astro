<style>
  .about-section {
    width: 100%;
    padding: 4rem 0 6rem 0;
    background: transparent;
    min-height: 100vh;
    display: flex;
    align-items: center;
  }

  .about-container {
    width: 80%; /* Takes up 80% of viewport width */
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(3, 1fr); /* 3 columns */
    grid-template-rows: repeat(2, 1fr); /* 2 rows */
    gap: 2.5rem;
    min-height: 70vh; /* Good height for 3x2 layout */
  }

  /* All cards share the same base styles */
  .portrait-card,
  .bio-card,
  .info-card {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 20px;
    padding: 2.5rem;
    backdrop-filter: blur(10px);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    flex-direction: column;
    min-height: 350px; /* Slightly shorter for 3x2 layout */
  }

  .portrait-card:hover,
  .bio-card:hover,
  .info-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 60px rgba(125, 245, 245, 0.15);
    border-color: rgba(125, 245, 245, 0.3);
  }

  /* Portrait Card Specific Styles */
  .portrait-card {
    justify-content: flex-start;
    align-items: center;
    padding: 1rem; /* Reduced padding for more image space */
  }

  .portrait-image {
    width: calc(100% - 1rem); /* Small margin from sides */
    height: calc(100% - 6rem); /* Fill height minus space for text */
    border-radius: 16px;
    overflow: hidden;
    margin-bottom: 1rem;
    background: var(--color-surface, #18181b);
    border: 2px solid rgba(255, 255, 255, 0.1);
    flex-shrink: 0;
  }

  .portrait-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .portrait-card:hover .portrait-image img {
    transform: scale(1.05);
  }

  .portrait-info {
    text-align: center;
    flex-shrink: 0;
  }

  .name {
    font-size: 1.875rem; /* Slightly smaller for 3-column */
    font-weight: 800;
    color: var(--color-text-inverse, #ffffff);
    margin: 0 0 0.5rem 0;
    background: linear-gradient(135deg, var(--color-accent, #7df5f5), var(--color-accent-strong, #48fcfc));
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
  }

  .name-icon {
    color: var(--color-accent, #7df5f5);
    flex-shrink: 0;
  }

  .title {
    font-size: 1.125rem;
    color: var(--color-accent, #7df5f5);
    font-weight: 600;
    margin: 0;
  }

  /* Card Header Styles */
  .card-header {
    display: flex;
    align-items: center;
    gap: 0.875rem;
    margin-bottom: 1.75rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    flex-shrink: 0;
  }

  .card-icon {
    color: var(--color-accent, #7df5f5);
    flex-shrink: 0;
    transition: transform 0.3s ease, color 0.3s ease;
  }

  .bio-card:hover .card-icon,
  .info-card:hover .card-icon {
    transform: scale(1.1);
    color: var(--color-accent-strong, #48fcfc);
  }

  .card-header h3 {
    font-size: 1.25rem; /* Slightly smaller for 3-column */
    font-weight: 700;
    color: var(--color-text-inverse, #ffffff);
    margin: 0;
  }

  /* Card Content Styles */
  .card-content {
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.7;
    flex-grow: 1;
    overflow-y: auto;
    display: flex;
    flex-direction: column;
  }

  .card-content p {
    margin: 0;
    font-size: 0.95rem;
    font-weight: 400;
    line-height: 1.6;
  }

  .card-content ul {
    margin: 0;
    padding-left: 1.75rem;
    list-style: none;
    flex-grow: 1;
  }

  .card-content li {
    font-size: 0.95rem;
    font-weight: 400;
    margin-bottom: 0.875rem;
    position: relative;
    line-height: 1.5;
  }

  .card-content li:before {
    content: '→';
    color: var(--color-accent, #7df5f5);
    position: absolute;
    left: -1.75rem;
    font-weight: 600;
  }

  .card-content li:last-child {
    margin-bottom: 0;
  }

  /* Responsive Design */
  @media (max-width: 1200px) {
    .about-container {
      width: 85%;
      gap: 2rem;
    }
    
    .portrait-card,
    .bio-card,
    .info-card {
      padding: 2rem;
      min-height: 320px;
    }
    
    .portrait-image {
      max-width: 200px;
      height: 200px;
    }
    
    .name {
      font-size: 1.75rem;
    }
  }

  @media (max-width: 1000px) {
    .about-container {
      grid-template-columns: repeat(2, 1fr); /* 2 columns */
      grid-template-rows: repeat(3, 1fr); /* 3 rows */
      width: 90%;
    }

    .portrait-card,
    .bio-card,
    .info-card {
      min-height: 300px;
    }

    .portrait-image {
      max-width: 180px;
      height: 180px;
    }
  }

  @media (max-width: 700px) {
    .about-section {
      padding: 3rem 0 8rem 0;
    }

    .about-container {
      width: 95%;
      grid-template-columns: 1fr; /* Single column */
      grid-template-rows: repeat(6, auto); /* 6 rows for stacking */
      gap: 2rem;
      min-height: auto;
    }

    .portrait-card,
    .bio-card,
    .info-card {
      min-height: 280px;
      padding: 2rem;
    }

    .portrait-image {
      max-width: 200px;
      height: 200px;
      margin-bottom: 1.5rem;
    }
  }

  @media (max-width: 640px) {
    .about-section {
      padding: 2rem 0 6rem 0;
    }

    .about-container {
      gap: 1.5rem;
    }

    .portrait-card,
    .bio-card,
    .info-card {
      padding: 1.5rem;
      border-radius: 16px;
      min-height: 250px;
    }

    .portrait-image {
      max-width: 180px;
      height: 180px;
      border-radius: 12px;
      margin-bottom: 1rem;
    }

    .name {
      font-size: 1.5rem;
    }

    .title {
      font-size: 1rem;
    }

    .card-header h3 {
      font-size: 1.125rem;
    }

    .card-content p,
    .card-content li {
      font-size: 0.9rem;
    }

    .card-header {
      margin-bottom: 1.5rem;
      padding-bottom: 0.875rem;
    }
  }

  @media (max-width: 480px) {
    .about-container {
      width: 100%;
      padding: 0 1rem;
    }

    .portrait-card,
    .bio-card,
    .info-card {
      padding: 1.25rem;
      min-height: 220px;
    }

    .portrait-image {
      max-width: 160px;
      height: 160px;
    }

    .name {
      font-size: 1.375rem;
    }

    .card-content p,
    .card-content li {
      font-size: 0.85rem;
    }
  }
</style>